{
	"type":"origins:multiple",
	"grant":{
		"type":"origins:toggle",
		"key":"key.saveToolbarActivator",
		"active_by_default":false
	},
	"ice":{
		"type":"origins:action_over_time",
		"interval":1,
		"entity_action":{
			"type":"origins:and",
			"actions":[
				{
					"type":"origins:execute_command",
					"command":"function apolloparrot:ice-king/frostwalker_ice"
				},
				{
					"type":"origins:block_action_at",
					"block_action":{
						"type":"origins:offset",
						"y":-1,
						"action":{
							"type":"origins:set_block",
							"block":"minecraft:frosted_ice"
						}
					}
				}
			]
		},
		"condition":{
			"type":"origins:and",
			"conditions":[
				{
					"type":"origins:power_active",
					"power":"*:*_grant"
				},
				{
					"type":"origins:on_block",
					"block_condition":{
						"type":"origins:block",
						"block":"minecraft:water"
					}
				},
				{
					"type":"origins:resource",
					"resource":"*:*_freeze",
					"comparison":">=",
					"compare_to":1
				}
			]
		}
	},
	"fancy":{
		"type":"origins:action_over_time",
		"interval":2,
		"entity_action":{
			"type":"origins:execute_command",
			"command":"function apolloparrot:ice-king/frostwalker_fancy"
		},
		"condition":{
			"type":"origins:and",
			"conditions":[
				{
					"type":"origins:power_active",
					"power":"*:*_grant"
				},
				{
					"type":"origins:on_block",
					"block_condition":{
						"type":"origins:block",
						"block":"minecraft:frosted_ice"
					}
				}
			]
		}
	},
	"freeze":{
		"type":"origins:resource",
		"min":0,
		"max":180,
		"start_value":180,
		"min_action":{
			"type":"origins:toggle",
			"power":"*:*_grant"
		},
		"hud_render":{
			"sprite_location":"origins:textures/gui/community/spiderkolo/resource_bar_02.png",
			"bar_index":8,
			"condition":{
				"type":"origins:resource",
				"resource":"*:*_freeze",
				"comparison":"<",
				"compare_to":180
			}
		}
	},
	"lose":{
		"type":"origins:action_over_time",
		"interval":20,
		"entity_action":{
			"type":"origins:change_resource",
			"resource":"*:*_freeze",
			"change":-1
		},
		"condition":{
			"type":"origins:power_active",
			"power":"*:*_grant"
		}
	},
	"refill":{
		"type":"origins:action_over_time",
		"interval":30,
		"entity_action":{
			"type":"origins:change_resource",
			"resource":"*:*_freeze",
			"change":1
		},
		"condition":{
			"type":"origins:power_active",
			"power":"*:*_grant",
			"inverted":true
		}
	},
	"respawn":{
		"type":"origins:action_on_callback",
		"entity_action_respawned":{
			"type":"origins:execute_command",
			"command":"resource set @s apolloparrot:ice-king/frostwalker_freeze 180"
		}
	}
}